
#grid
  - @pics.each do |pic|
    .cell
      .pic{:id => "pic_#{pic.id}"}
        = link_to pic do
          = image_tag pic.image_url(:medium).to_s if pic.image # pic.image.url(:medium)
        .caption
          %h4= pic.title
          .line
            - if pic.taken_at
              = "taken at #{pic.taken_at}"
              ·
            = link_to "Map", map_pics_path(:pic_id => pic.id)
            - if current_user
              ·
              = link_to "Edit", edit_pic_path(pic), :class => "edit"
              ·
              = link_to "Delete", pic, :method => :delete, :data => { :confirm => "Are you sure?" }, :class => "delete"

